---
import Layout from '../layouts/Layout.astro';
import DescriptionViewer from '../components/DescriptionViewer';
---

<Layout>
	<div class="container mx-auto p-4">
		<div class="max-w-2xl mx-auto mt-10 text-center">
			<h1 class="text-4xl font-bold mb-6">Inventory Management System</h1>
			<p class="text-lg mb-10">Welcome to the inventory management system. Choose an option below:</p>
			
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				<a href="/chat" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-4 px-8 rounded-lg transition-colors text-lg">
					Chat Assistant
				</a>
				<a href="/ui" class="bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-8 rounded-lg transition-colors text-lg">
					UI Dashboard
				</a>
			</div>
		</div>

		<DescriptionViewer client:load />
	</div>
</Layout> 